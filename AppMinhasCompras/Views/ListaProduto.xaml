<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMinhasCompras.Views.ListaProduto"
             Title="Minhas Compras">


    <ContentPage.ToolbarItems>
        
        <ToolbarItem Text="Somar" />
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked" />
        
        </ContentPage.ToolbarItems>
    
        <!-- Inicio de personalização da tela,pra finar mais bonido no emulador -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0EA5A0" Offset="0.0" />
            <GradientStop Color="#128C43" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout>
        <Label 
            Text="Em breve um novo APP completo para você!" FontSize="Subtitle"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>